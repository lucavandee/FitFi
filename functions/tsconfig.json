{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "rootDir": "../",
    "outDir": "../netlify-functions",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}