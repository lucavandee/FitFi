{
  "name": "fitfi",
  "private": true,
  "version": "1.7.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:netlify": "netlify dev",
    "preinstall": "node ./scripts/print-env.js",
    "typecheck": "tsc --noEmit --pretty",
    "build:strict": "npm run typecheck && vite build",
    "test": "vitest",
    "test:routes": "node scripts/test-routes.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "playwright test tests/visual/nova-sse-health.spec.ts --headed",
    "clean:page-footers": "node scripts/codemods/remove-page-footers.mjs",
    "preflight": "node scripts/preflight.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "supabase:setup": "node scripts/supabase-setup.js",
    "supabase:diff": "npx supabase db diff -f",
    "supabase:push": "npx supabase db push",
    "supabase:reset": "npx supabase db reset",
    "supabase:status": "npx supabase status",
    "clean:unused": "node scripts/cleanup/clean-unused.mjs",
    "prepare": "node -e \"if(process.env.CI!=='true'){try{require('child_process').execSync('husky install',{stdio:'inherit'})}catch(e){console.log('husky skipped')}}\""
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.28.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "supabase": "^2.34.3",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
