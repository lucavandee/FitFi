#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"
set -e

# Block Python headers in frontend
if grep -RIlE '(#!/usr/bin/env python3|Robust Wehkamp Scraper)' src 2>/dev/null; then
  echo '❌ Python header gevonden in frontend code – commit geweigerd'
  exit 1
fi
echo '✅ Geen Python headers gevonden in frontend code'

# Block >2MB files (jouw guard script)
if [ -f scripts/guard/no-large-files.mjs ]; then
  node scripts/guard/no-large-files.mjs
fi
